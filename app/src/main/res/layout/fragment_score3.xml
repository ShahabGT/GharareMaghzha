<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.Score1Fragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/score3_guide5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/score3_view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/dark1"
        app:layout_constraintBottom_toBottomOf="@+id/score3_guide5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/score3_view2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_wave"
        android:backgroundTint="@color/dark1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score3_guide5" />
    <com.skyfishjy.library.RippleBackground
        android:id="@+id/guide_ripple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/score3_view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rb_color="#ffffff"
        app:rb_duration="5000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_scale="5">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/score_upgrade" />
    </com.skyfishjy.library.RippleBackground>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/score3_title"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vazir"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/score3_title"
        android:textColor="@color/dark1"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score3_view2" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/score3_subtitle"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/vazir"
        android:gravity="center|top"
        android:padding="16dp"
        android:text="@string/score3_subtitle"
        android:textColor="@color/dark1"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score3_title" />

</androidx.constraintlayout.widget.ConstraintLayout>