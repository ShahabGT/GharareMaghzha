<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreferenceCompat
        android:summary="@string/settings_music_summery"
        app:allowDividerBelow="true"
        app:icon="@drawable/ic_settings_music"
        app:key="music"
        app:title="@string/settings_music" />

    <SwitchPreferenceCompat
        android:summary="@string/settings_auto_next_summery"
        app:allowDividerBelow="true"
        app:icon="@drawable/ic_settings_next"
        app:key="next"
        app:title="@string/settings_auto_next" />

    <SwitchPreferenceCompat
        android:summary="@string/settings_notification_summery"
        app:allowDividerBelow="true"
        app:icon="@drawable/ic_settings_notification"
        app:key="notification"
        app:title="@string/settings_notification" />
    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>